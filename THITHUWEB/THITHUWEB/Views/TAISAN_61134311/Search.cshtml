@model List<THITHUWEB.Models.TAISAN>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenTS", rowsPerPage: 2);
    @Scripts.Render("~/Scripts/jquery-1.6.2.min.js")

}
<html>
<head>
    <style type="text/css">
        .grid-footer {
            color: #000;
            font: 17px Calibri;
            text-align: center;
            font-weight: bold;
        }

            .grid-footer a {
                background-color: #ffffff;
                color: blue;
                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                padding: 1px 10px 2px 10px;
            }

                .grid-footer a:active, a:hover {
                    background-color: #ffffff;
                    color: #FFAD33;
                    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                }

        .alternatingRowStyle {
            background-color: aliceblue;
        }

        table .table1 {
            text-align: left;
            margin-left: 0px;
            margin-right: 0px;
            width: 800px;
        }

        .tr, .td {
            text-align: left;
        }

        .table1 input{
            margin:5px 10px;
        }
        .table1 td{
            font-size:14px;
            font-weight:600;
        }
        #tb {
            font-size: 14px;
            font-weight: 600;
            color: royalblue;
            margin: 10px 363px;
            
        }
        .tieude {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 2px;
            color: blue;
            text-align: center;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("Search", "TAISAN_61134311", FormMethod.Get))
        {
            @Html.AntiForgeryToken()

            <h3 class="tieude">Tìm kiếm tài sản</h3>
            <table class="table1" align="center">

                <tr>
                    <td>Tên tài sản</td>
                    <td>
                        <input type="text" name="TenTS" value="@ViewBag.TenTS" class="my-2 mx-3" />
                    </td>

                </tr>


                <tr>
                    <td>Giá từ</td>
                    <td>
                        <input type="text" name="giaMin" value="@ViewBag.giaMin" />
                        Đến<input type="text" name="giaMax" value="@ViewBag.giaMax" />
                    </td>

                </tr>



                <tr>
                    <td></td>
                    <td>
                        <input type="submit" name="submit" value="Tìm kiếm" class="btn btn-success" />
                        <input type="button" name="Nhapmoi" value="Nhập mới" class="btn btn-info" onclick="location.href='@Url.Action("Search", "TAISAN_61134311/Search")'" />

                    </td>
                </tr>
            </table>
        }
    </div>
    <div id="gridContent">
        <span id="tb"> @ViewBag.TB</span>
        @grid.GetHtml(
           tableStyle: "table table-bordered table-hover",
           footerStyle: "grid-footer",
           fillEmptyRows: true,
           mode: WebGridPagerModes.Numeric,
           alternatingRowStyle: "alternatingRowStyle",
             columns: new[]  // colums in grid
            {
        grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
       grid.Column("MaTS","Mã tài sản"), //the model fields to display
       grid.Column("TenTS","Tên tài sản"  ),

      grid.Column("XuatSu","Xuất sứ",format: (@item) => @item.XuatSu==true?"Trong nước":"Ngoại nhập"),

grid.Column("DonGia","Dơn giá",format:@<text> @item.DonGia.ToString("#,##0")</text>),
grid.Column("DVT","Đơn vị tính"),
grid.Column("AnhMH","Ảnh minh hoạ"),
grid.Column("LOAITAISAN.TenLTS","Loại tài sản"),
grid.Column("GhiChu","Ghi chú"),


}
)
    </div>
</body>
</html>