@model IEnumerable<THITHUWEB.Models.TAISAN>

@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(Model, canPage: true, defaultSort: "TenTS", rowsPerPage: 5);
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!--================================================================================-->
<style type="text/css">
    .grid-footer {
        color: black;
        font: 17px Calibri;
        text-align: center;
        font-weight: 900;
    }

    .grid-footer a {
        background-color: #ffffff;
        color: black;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        padding: 1px 10px 2px 10px;
    }

    .grid-footer a:active, a:hover {
        background-color: #ffffff;
        color: blue;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .alternatingRowStyle {
        background-color: aliceblue;
    }

    table .table1 {
        text-align: left;
        margin-left: 0px;
        margin-right: 0px;
        width: 800px;
    }

    .tr, .td {
        text-align: left;
    }
    .tieude {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: blue;
        text-align:center;
    }
</style>


<!--=======================================================-->
<h3 class="tieude">DANH SÁCH TÀI SẢN </h3>


@grid.GetHtml(
    tableStyle: "table table-bordered table-hover",
    footerStyle: "grid-footer",
    fillEmptyRows: true,
    mode: WebGridPagerModes.Numeric,
    alternatingRowStyle: "alternatingRowStyle",
    columns: new[]  
    {
        grid.Column("STT",format: item => item.WebGrid.Rows.IndexOf(item) + 1 + Math.Round(Convert.ToDouble(grid.TotalRowCount / grid.PageCount) / grid.RowsPerPage) * grid.RowsPerPage * grid.PageIndex),
        grid.Column("MaTS","Mã tài sản"), //the model fields to display
        grid.Column("TenTS","Tên tài sản"  ),
        grid.Column("XuatSu","Xuất sứ",format: (@item) => @item.XuatSu==true?"Trong nước":"Ngoại nhập"),
        grid.Column("DonGia","Dơn giá",format:@<text> @item.DonGia.ToString("#,##0")</text>),
        grid.Column("DVT","Đơn vị tính"),
        grid.Column("AnhMH","Ảnh minh hoạ"),
        grid.Column("LOAITAISAN.TenLTS","Loại tài sản"),
        grid.Column("GhiChu","Ghi chú"),
        grid.Column(format: (item) => Html.ActionLink("Xóa", "Delete","TAISAN_61134311", new { id = item.MaTS },"TAISAN_61134311Controller")),

    }
)
