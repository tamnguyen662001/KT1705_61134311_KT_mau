@model List<KT1705_61134311.Models.Sinhvien>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    string gtinh = "";
    int i = 0;
}
Nhập mã nhân viên cần tìm
@using (Html.BeginForm())
{
    <input type="text" name="maSV" />
    <input type="submit" value="Tìm kiếm" />
    <h3>DANH SÁCH SINH VIÊN</h3>

    <p>
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                STT
            </th>
            <th>
                Mã SV
            </th>
            <th>
                Họ sinh viên
            </th>
            <th>
                Tên sinh viên
            </th>
            
            <th>
                Ngày sinh
            </th>
            <th>
                Giới tính 
            </th>
            <th>
                Ảnh SV
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
               Lớp
            </th>
           
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>
            @{i++;}
            @i
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaSV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoSV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenSV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)

        </td>
        <td>
            @{if (item.GioiTinh == true)
                { gtinh = "Nam"; }
                else
                { gtinh = "Nữ"; }
            }
            @gtinh

        </td>

      
        <td>
            @Html.DisplayFor(modelItem => item.AnhNV)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lop)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaSV }) |
            @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaSV }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaSV })
        </td>
    </tr>
        }

    </table>

}


